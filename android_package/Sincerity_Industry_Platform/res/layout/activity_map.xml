<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
              
        <ImageView 
            android:layout_alignParentLeft="true"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text="位置"/>
        <TextView 
            android:id="@+id/daohang"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导航"
            android:textColor="#ff0000"/>
        
</RelativeLayout>

    
    <FrameLayout 
        android:id="@+id/fra"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_above="@+id/bottom">
    

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
      />
 
    <LinearLayout 
        android:id="@+id/ll"
        android:background="@drawable/ll_background"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="测试名称"
            android:textColor="#ffffff"/>
        <TextView 
            android:id="@+id/fj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近楼盘"
            android:textColor="#ffffff"/>
    </LinearLayout>
    
    </FrameLayout>
    
    <LinearLayout 
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/dt_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/dt"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/dt_selector"/>
            <TextView 
                android:id="@+id/dt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地铁"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/gj_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/gj"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/gj_selector"/>
            <TextView 
                android:id="@+id/gj_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公交"/>
            
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/sc_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
            
            >
            <ImageView 
                
                android:id="@+id/sc"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/sc_selector"/>
              <TextView 
                  android:id="@+id/sc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商场"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/cy_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/cy"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/cy_selector"/>
              <TextView 
                  android:id="@+id/cy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐饮"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/jd_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/jd"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/jd_selector"/>
              <TextView 
                  android:id="@+id/jd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒店"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/yh_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/yh"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/yh_selector"/>
              <TextView 
                  android:id="@+id/yh_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/jj_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
            >
            <ImageView 
                android:id="@+id/jj"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/jj_selector"/>
            <TextView 
                android:id="@+id/jj_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="街景"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
