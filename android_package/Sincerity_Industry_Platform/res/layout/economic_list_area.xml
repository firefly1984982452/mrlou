<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp" 
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_economic_head"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical" >

            <com.mrlou.economic.view.XCCircleRectImageView_head
                android:id="@+id/iv_economic_list_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_economic_list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="王飞WF"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_econimic_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="bottom|right" >

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:id="@+id/iv_economic_list_phone"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/dianhua" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/lay_economic_list_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_view_red_2dp" >

                    <TextView
                        android:id="@+id/tv_economic_list_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:text="瑞麦商业地产"
                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_economic_list_job_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="从业7年"
                    android:textColor="@color/light_gray"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计成交"
                    android:textColor="@color/light_gray"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_economic_list_new_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textColor="@color/red"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_economic_list_area_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="虹口区成交"
                    android:textColor="@color/light_gray"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_economic_list_area_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@color/red"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>