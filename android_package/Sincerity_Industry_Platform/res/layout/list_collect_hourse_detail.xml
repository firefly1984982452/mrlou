<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lay_collecthourse_detail_pic"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            
            <ImageView 
                android:id="@+id/iv_collecthourse_detail_pic"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/iv_collectlist_hourse_detail"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <TextView
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv_collecthourse_detail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1" >
				
                 <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <TextView
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_collecthourse_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lay_collecthourse_detail_del"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal" >

                <ImageView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_images_del" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right" >

              
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>